class Hole {
  Vec2 pos;
  float radius = 17;

  //------------------------------------------------------------------------------------------------------------------------------------------------------------------
  //constructor
  Hole(int x, int y) {
    this.pos = new Vec2(x, y);
  }
  //------------------------------------------------------------------------------------------------------------------------------------------------------------------
  //draw a black circle representing the hole
  void show() {
    fill(0);
    stroke(0);
    strokeWeight(1);
    ellipse(pos.x, pos.y, 2 * radius, 2 * radius);
  }
}
